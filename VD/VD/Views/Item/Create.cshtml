@using VD.Models.BasicItm
@model Item
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="create" asp-controller="item">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription" class="control-label">ShortDescription</label>
        <input type="text" asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LongDescription" class="control-label">LongDescription</label>
        <input type="text" asp-for="LongDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">ImageUrl</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
  
</form>